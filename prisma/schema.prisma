// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Meetings {
  id        String     @id @default(cuid())
  type      String?
  title     String
  body      String
  author    User?      @relation(fields: [userId], references: [id])
  createdAt DateTime   @default(now())
  userId    String
  Comments  Comments[]
  Likes     Likes[]
}

model Comments {
  id         String   @id @default(cuid())
  meetingId  Meetings @relation(fields: [meetingsId], references: [id])
  author     User     @relation(fields: [userId], references: [id])
  content    String
  createdAt  DateTime @default(now())
  meetingsId String
  userId     String
}

model Likes {
  id         String   @id @default(cuid())
  meetingId  Meetings @relation(fields: [meetingsId], references: [id])
  userId     User     @relation(fields: [author], references: [id])
  createdAt  DateTime @default(now())
  meetingsId String
  author     String
}

model Mural {
  id        String   @id @default(cuid())
  body      String
  author    User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  userId    String
}

model User {
  id       String     @id @default(cuid())
  name     String
  email    String     @unique
  password String
  token    String?
  forum    Meetings[]
  Comments Comments[]
  Likes    Likes[]

  sentRequests     Friendship[] @relation(name: "Requester")
  receivedRequests Friendship[] @relation(name: "Addressed")
  mural            Mural[]
}

model Friendship {
  id          String   @id @default(cuid())
  requester   User     @relation(name: "Requester", fields: [requesterId], references: [id])
  addressed   User     @relation(name: "Addressed", fields: [addressedId], references: [id])
  status      String
  createdAt   DateTime @default(now())
  requesterId String
  addressedId String
}

model Visitor {
  id   String @id @default(cuid())
  name String
}
